<% content_for :page_title do %>
  <%= Spree.t(:edit_blog_comment) %>
<% end %>

<% content_for :page_actions do %>
  <li>
    <%= button_link_to Spree.t(:back), collection_url, icon: 'icon-arrow-left' %>
  </li>
<% end %>

<%= render partial: 'spree/shared/error_messages', locals: { target: @blog_comment } %>

<%= form_for [:admin, @blog_comment], url: spree.admin_blog_comment_path(@blog_comment.id) do |f| %>
  <fieldset class="no-border-top">

    <%= render partial: 'form', locals: { f: f } %>

    <div class="clear"></div>

    <%= render partial: 'spree/admin/shared/edit_resource_links' %>

  </fieldset>
<% end %>
